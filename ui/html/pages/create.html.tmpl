{{ define "title" }}Create a New Snippet{{ end }}

{{ define "main" }}
	<form
		action="/snippet/create"
		method="post"
	>
		<div>
			<label for="snippet_title">Title</label>
			<input
				type="text"
				name="title"
				id="snippet_title"
			/>
		</div>

		<div>
			<label for="snippet_content">Content</label>
			<textarea
				name="content"
				id="snippet_content"
				rows="6"
			></textarea>
		</div>

		<div>
			<label for="snippet_content">Delete in</label>

			<input
				type="radio"
				name="expires"
				value="365"
				checked
			/>
			One Year

			<input
				type="radio"
				name="expires"
				value="7"
			/>
			One Week

			<input
				type="radio"
				name="expires"
				value="1"
			/>
			One Day
		</div>

		<div>
			<input
				type="submit"
				value="Publish snippet"
			/>
		</div>
	</form>
{{ end }}
